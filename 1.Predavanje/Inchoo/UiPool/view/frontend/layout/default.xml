<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Inchoo\UiPool\Block\UiJs" name="ui-js" template="Inchoo_UiPool::ui-js.phtml" cacheable="false">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="ui-js" xsi:type="array">
                                <item name="component" xsi:type="string">Inchoo_UiPool/js/ui-js</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Inchoo_UiPool/ui-js</item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template"  name="ui_pool_section" template="Inchoo_UiPool::uipoolsection.phtml"></block>
        </referenceContainer>
    </body>
</page>
